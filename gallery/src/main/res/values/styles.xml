<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Gallery_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gallery_primary</item>
        <item name="colorPrimaryDark">@color/gallery_primary_dark</item>
        <item name="toolbar">@style/Gallery_Toolbar</item>
        <item name="album.dropdown.title.color">@color/gallery_album_dropdown_title_text</item>
        <item name="album.dropdown.count.color">@color/gallery_album_dropdown_count_text</item>
        <item name="album.element.color">@android:color/white</item>
        <item name="album.thumbnail.placeholder">
            @color/gallery_album_dropdown_thumbnail_placeholder
        </item>
        <item name="album.emptyView.textColor">@color/gallery_album_empty_view</item>
        <item name="item.placeholder">@color/gallery_item_placeholder</item>
        <item name="item.checkCircle.backgroundColor">
            @color/gallery_item_checkCircle_backgroundColor
        </item>
        <item name="item.checkCircle.borderColor">@color/gallery_item_checkCircle_borderColor</item>
        <item name="page.bg">@color/gallery_page_bg</item>
        <item name="bottomToolbar.bg">@color/gallery_bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.textColor">@color/gallery_bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.textColor">@color/gallery_bottom_toolbar_apply</item>
        <item name="preview.bottomToolbar.back.textColor">
            @color/gallery_preview_bottom_toolbar_back_text
        </item>
        <item name="preview.bottomToolbar.apply.textColor">
            @color/gallery_preview_bottom_toolbar_apply
        </item>
        <item name="listPopupWindowStyle">@style/Gallery_Popup</item>
        <item name="capture.textColor">@color/gallery_capture</item>
    </style>

    <style name="Gallery_Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="Gallery_Popup" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/gallery_album_popup_bg</item>
    </style>
</resources>